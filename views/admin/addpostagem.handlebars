    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}


<h3>Nova postagem:</h3>
<div class="card">
    <div class="card-body">
        
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título:</label>
                <input type="text" class="form-control" id="titulo" name="titulo" required>
            <label for="slug" class="form-label">Slug:</label>
                <input type="text" class="form-control" id="slug" name="slug"  required>
            <label for="descricao" class="form-label">Descrição:</label>
                <input type="text" class="form-control" id="descricao" name="descricao" required >
            <label for="conteudo" class="form-label">Conteúdo:</label>
                <textarea class="form-control" id="conteudo" name="conteudo" required></textarea>
            <label for="categoria">Categoria:</label>
                <select class="form-control" id="categoria" name="categoria" >
                        <option value="0"></option>
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
            <button type="submit" class="btn btn-success mt-2">Criar postagem</button>
        </form>
    </div>
</div>